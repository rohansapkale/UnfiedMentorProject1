<head>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<h2 class="text-2xl font-bold mb-4">Approve Students</h2>

<div class="overflow-x-auto">
    <table class="table-auto min-w-full bg-white rounded-lg shadow-md border-collapse">
        <thead class="bg-blue-500 text-white">
            <tr>
                <th class="px-4 py-2">Name</th>
                <th class="px-4 py-2">Email</th>
                <th class="px-4 py-2">Action</th>
            </tr>
        </thead>
        <tbody class="text-center">
            <% students.forEach(student => { %>
                <tr class="border-t">
                    <td class="px-4 py-2"><%= student.name %></td>
                    <td class="px-4 py-2"><%= student.email %></td>
                    <td class="px-4 py-2">
                        <form action="/admin/approve-students" method="POST">
                            <input type="hidden" name="studentId" value="<%= student._id %>">
                            <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400">Approve</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
