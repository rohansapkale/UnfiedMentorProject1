<head>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-500 min-h-screen flex items-center justify-center">
<div class="max-w-md mx-auto mt-8 p-6 bg-gray-100 rounded-lg shadow-md">
    <h2 class="text-2xl font-bold mb-4">Teacher Registration</h2>
    <form action="/teacher/register" method="POST" class="space-y-4">
        <div>
            <label for="name" class="block text-gray-700">Name:</label>
            <input type="text" id="name" name="name" required
                class="w-full p-2 bg-gray-100 border border-gray-300 rounded mt-1 focus:outline-none focus:ring-blue-500 focus:border-blue-500">
        </div>
        <div>
            <label for="department" class="block text-gray-700">Department:</label>
            <input type="text" id="department" name="department" required
                class="w-full p-2 bg-gray-100 border border-gray-300 rounded mt-1 focus:outline-none focus:ring-blue-500 focus:border-blue-500">
        </div>
        <div>
            <label for="subject" class="block text-gray-700">Subject:</label>
            <input type="text" id="subject" name="subject" required
                class="w-full p-2 bg-gray-100 border border-gray-300 rounded mt-1 focus:outline-none focus:ring-blue-500 focus:border-blue-500">
        </div>
        <div>
            <label for="email" class="block text-gray-700">Email:</label>
            <input type="email" id="email" name="email" required
                class="w-full p-2 bg-gray-100 border border-gray-300 rounded mt-1 focus:outline-none focus:ring-blue-500 focus:border-blue-500">
        </div>
        <div>
            <label for="password" class="block text-gray-700">Password:</label>
            <input type="password" id="password" name="password" required
                class="w-full p-2 bg-gray-100 border border-gray-300 rounded mt-1 focus:outline-none focus:ring-blue-500 focus:border-blue-500">
        </div>
        <div>
            <button type="submit"
                class="w-full bg-blue-500 hover:bg-blue-700 text-white py-2 px-4 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">
                Register
            </button>
        </div>
    </form>
</div>
<%- include('../partials/footer') %>
</body>
